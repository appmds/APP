<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/app_bg"
    tools:context=".MenuPrincipal" >

    <ImageView
        android:id="@+id/imgviewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="30dp"
        android:contentDescription="@string/imgviewLOGO"
        android:scaleType="fitStart"
        android:src="@drawable/app_logo" />

    <ImageView
        android:id="@+id/fundo_menu_botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="248dp"
        android:contentDescription="imgviewFundo"
        android:src="@drawable/fundo_menu_botoes" />

    <ImageButton
        android:id="@+id/imgbutton_busca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="258dp"
        android:background="@drawable/botao_busca"
        android:contentDescription="busca" />
    
    <ImageButton
        android:id="@+id/favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="52dp"
        android:layout_y="326dp"
        android:background="@drawable/botao_favoritos"
        android:contentDescription="favoritos" />

     <ImageButton
         android:id="@+id/imgbutton_sobre"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="150dp"
         android:layout_y="258dp"
         android:background="@drawable/botao_sobre"
         android:contentDescription="sobre" />

     <ImageButton
         android:id="@+id/historico"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="150dp"
         android:layout_y="326dp"
         android:background="@drawable/botao_historico"
         android:contentDescription="historico" />

</AbsoluteLayout>